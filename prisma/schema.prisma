generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id     Int    @id @default(autoincrement())
  title  String
  author String
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}
